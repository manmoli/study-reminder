{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                     
    "allowJs": true,                       
    "outDir": "./build",                        
    "strict": true,                           
    "esModuleInterop": true,
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "noImplicitAny": true
  },
  "exclude": [
    "./tests/",
    "./dist",
    "node_modules"
  ]
}